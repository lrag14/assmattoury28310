---
import '../styles/global.css';
import NavBar from '../components/NavBar.astro';
import Footer from '../components/Footer.astro';
import { SEO } from 'astro-seo';

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <link
      rel="icon"
      type="image"
      href="https://res.cloudinary.com/dgakih33l/image/upload/v1690289335/assmattoury/wonder_1690052404454_rzo54y.jpg"
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <SEO
      title="Assistante Maternelle à Toury"
      description="Garde, nounou, tarifs horaire, garde à domicile, CMG, Pajemploi+,"
    />

    <!-- Make sure you put this AFTER Leaflet's CSS -->

    <title>{title}</title>
  </head>
  <body>
    <NavBar />

    <slot />
    <Footer />

    <script
      is:inline
      src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.5/flowbite.min.js"
    ></script>
    <script src="./apparition.js"></script>
    <script
      src="https://unpkg.com/htmx.org@1.9.4"
      integrity="sha384-zUfuhFKKZCbHTY6aRR46gxiqszMk5tcHjsVFxnUo8VMus4kHGVdIYVbOYYNlKmHV"
      crossorigin="anonymous"></script>
  </body>
</html>
