                                 d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                 clip-rule="evenodd"></path></svg
                           ></button
                        >
                        <div
                           id="doubleDropdown"
                           class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-32 dark:bg-gray-700">
                           <ul
                              class="py-2 text-sm text-gray-700 dark:text-gray-200"
                              aria-labelledby="doubleDropdownButton">
                              <li>
                                 <a
                                    href="/price"
                                    class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
                                    >Taux horaires</a
                                 >
                              </li>
                              <li>
                                 <a
                                    href="/rates"
                                    class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
                                    >Repas</a
                                 >
                              </li>
                              <li>
                                 <a
                                    href="/indemnity"
                                    class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
                                    >Indemnités d'entretien</a
                                 >
                              </li>
                           </ul>
                        </div>
                     </li>
                     <li>
                        <a
                           href="/calculate"
                           class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
                           >Estimez vos dépenses</a
                        >
                     </li>
                  </ul>
               </div>
            </li>
            <li>
               <a
                  href="/faq"
                  class="block py-2 pl-3 pr-4 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-white md:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent"
                  >FAQ</a
               >
            </li>
            <li>
               <a
                  href="/contact"
                  class="block py-2 pl-3 pr-4 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-white md:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent"
                  >Contact</a
               >
            </li>
         </ul>
      </div>
   </div>
</nav>
<script>
   // Get the navbar element
   const navbar = document.getElementById('navbar');

   // Initialize the previous scroll position
   let prevScrollpos = window.scrollY;

   // Add an event listener to the window object to detect when the user scrolls
   window.addEventListener('scroll', () => {
      // Get the current scroll position
      const currentScrollPos = window.scrollY;

      // Determine the direction of the scroll
      const isScrollingDown = currentScrollPos > prevScrollpos;

      // Animate the navbar based on the direction of the scroll
      if (isScrollingDown) {
         navbar.style.transform = 'translateY(-100%)';
      } else {
         navbar.style.transform = 'translateY(0)';
      }

      // Update the previous scroll position
      prevScrollpos = currentScrollPos;
   });
</script>
