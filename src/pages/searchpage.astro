---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Search">
  <section
    class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-5">
    <div class="flex justify-around">
      <h1
        class="text-6xl lg:text-5xl md:text-4xl sm:text-3xl xsm:text-2xl font-bold filter drop-shadow-sm text-slate-200 text-start mt-20">
        Recherche
      </h1>
    </div>
  </section>
  <article
    aria-label="Resultat"
    class="format lg:format-lg flex flex-col mx-auto px-2">
    <h2 class="text-center text-yellow-300">Recherche</h2>
    <p id="searchReadout"></p>
  </article>
</MainLayout>
