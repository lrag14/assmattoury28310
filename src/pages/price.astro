---
import MainLayout from '../layouts/MainLayout.astro';
const hourPrice = {
  between6080: 5.2,
  between81100: 'de 4.80€ à 5.20€',
  between101139: 'de 4.40€ à 4.80€',
  between140159: 'de 4.00€ à 4.40€',
  more160: 'de 3.90€ à 4.10€',
};
const { between6080, between81100, between101139, between140159, more160 } =
  hourPrice;
---

<MainLayout title="Taux horaire">
  <section
    class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-5 scroll-animation">
    <div class="flex justify-around">
      <h1
        class="text-3xl lg:text-5xl md:text-4xl sm:text-3xl xsm:text-2xl font-bold filter drop-shadow-sm text-slate-200 text-start mt-20">
        Taux horaire pratiqué 2023
      </h1>
    </div>
  </section>
  <article class="format lg:format-lg flex flex-col mx-auto px-2">
    <h2 class="text-white text-center scroll-animation">
      Variable selon les nombres d'heures de garde.
    </h2>

    <div class="relative scroll-animation">
      <table class="w-full text-sm text-center">
        <thead class="text-base text-blue-700 bg-green-300">
          <tr>
            <th scope="col" class="px-3 py-3">Heures/mois</th>
            <th scope="col" class="px-3 py-3"> Taux/Heure net</th>
          </tr>
        </thead>
        <tbody>
          <tr class="bg-white border-b dark:border-gray-700">
            <th
              scope="row"
              class="px-3 py-4 font-medium text-blue-600 bg-pink-400 whitespace-nowrap"
              >Entre 60 & 80
            </th>
            <td class="px-3 py-4 font-bold text-blue-600 bg-pink-400"
              >{between6080}€</td
            >
          </tr>
          <tr class="border-b bg-gray-50 dark:border-gray-700">
            <th
              scope="row"
              class="px-3 py-4 font-medium text-blue-600 whitespace-nowrap">
              Entre 81 & 100
            </th>
            <td class="px-3 py-4 font-bold text-blue-600"> {between81100}</td>
          </tr>
          <tr class="bg-white border-b dark:border-gray-700">
            <th
              scope="row"
              class="px-3 py-4 font-medium text-blue-600 whitespace-nowrap bg-pink-400">
              Entre 101 & 139
            </th>
            <td class="px-3 py-4 font-bold text-blue-600 bg-pink-400"
              >{between101139}</td
            >
          </tr>
          <tr class="border-b bg-gray-50 dark:border-gray-700">
            <th
              scope="row"
              class="px-3 py-4 font-medium text-blue-600 whitespace-nowrap">
              Entre 140 & 159
            </th>
            <td class="px-3 py-4 font-bold text-blue-600">{between140159}</td>
          </tr>
          <tr class="bg-white border-b dark:border-gray-700">
            <th
              scope="row"
              class="px-3 py-4 font-medium text-blue-600 whitespace-nowrap bg-pink-400">
              160 et au-delà
            </th>
            <td class="px-3 py-4 font-bold text-blue-600 bg-pink-400"
              >{more160}</td
            >
          </tr>
        </tbody>
      </table>
    </div>
    <a href="/rates" class="text-white no-underline text-right"
      ><button
        type="button"
        class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
        Vers le tarif des repas

        <svg
          aria-hidden="true"
          class="w-5 h-5 ml-2 -mr-1"
          fill="currentColor"
          viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
          ><path
            fill-rule="evenodd"
            d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
            clip-rule="evenodd"></path></svg
        >
      </button></a
    >
  </article>
</MainLayout>
